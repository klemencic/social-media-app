<Window x:Class="UporabniskiVmesniki_Klemencic.AddPrijatelji"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dodaj prijatelja" Height="300" Width="300" ResizeMode="NoResize" SizeToContent="Manual">
    <Grid>
        <Button Style="{StaticResource ButtonStyle}" Content="Dodaj prijatelja" Click="OK_ClickUser" Width="100" Height="30"
                HorizontalAlignment="Left" VerticalAlignment="Top"
                Margin="10,10,0,0"/>
        <Button Style="{StaticResource ButtonStyle}" Content="Prekliči" Click="Cancel_Click" Width="100" Height="30" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0, 10, 10,10"></Button>




        <Label Style="{StaticResource LabelStyle}" Content="Priimek" HorizontalAlignment="Left" Margin="10,101,0,0" VerticalAlignment="Top"/>
        <TextBox Style="{StaticResource TextBoxStyle}" x:Name="Priimek" HorizontalAlignment="Left" Height="24" Margin="10,128,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150"/>

        <Label Style="{StaticResource LabelStyle}" Content="Ime" HorizontalAlignment="Left" Margin="10,48,0,0" VerticalAlignment="Top"/>
        <TextBox Style="{StaticResource TextBoxStyle}" x:Name="Ime" HorizontalAlignment="Left" Height="24" Margin="10,74,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150"/>

       

        




    </Grid>
</Window>